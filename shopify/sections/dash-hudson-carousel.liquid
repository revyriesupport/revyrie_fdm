
{% unless settings.staging_site_enable %}
{% if section.settings.show_content %}

{{ 'section-featured-press.css' | asset_url | stylesheet_tag }}

<div class="featured-press">
	<div class="row collapse">
		<div class="medium-12 columns">
			{% if section.settings.heading != '' %}
			<h2 class="center">{% if section.settings.link != blank %}<a href="{{ section.settings.link }}">{% endif %}{{ section.settings.heading | escape }}{% if section.settings.link != blank %}</a>{% endif %}</h2>
			{% endif %}

			<script src="https://cdn.dashhudson.com/web/js/board-carousel-embed.js" type="text/javascript" data-name="dhboard-carousel" data-gallery-id="87517" data-row-size="3" data-gap-size="10" data-mobile-row-size="2"  data-autoplay="true" data-mobile-gap-size="2"  ></script>

		</div><!-- medium-12 columns-->
	</div><!-- row collapse-->
</div><!-- featured-press top-margin-large-->
{% endif %}
{% endunless %}

	{% schema %}
	{
		"name": "Dash Hudson carousel",
		"settings": [
		{
			"type": "checkbox",
			"id": "show_content",
			"label": "Enable"
		},
		{
			"type": "textarea",
			"id": "heading",
			"label": "Heading",
			"default": "Shop the feed"
		},
		{
			"type": "url",
			"id": "link",
			"label": "Link"
		}
		],
		"presets": [{
			"name": "Dash Hudson carousel",
			"category": "Social"

		}]
	}
	{% endschema %} 

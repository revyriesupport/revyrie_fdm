                  }
               ]
            },
            {
               "type":"checkbox",
               "id":"panel_2_video_enable",
               "label":"Enable Video",
               "default":false
            },
            {
               "type":"textarea",
               "id":"panel_2_video_mp4",
               "label":"Video MP4 File",
               "info":"700px by 600px, upload as MP4."
            },
            {
               "type":"textarea",
               "id":"panel_2_video_ogv",
               "label":"Video OGV File",
               "info":"700px by 600px, upload as OGV."
            }
         ]
      }
   ]
}
{% endschema %}

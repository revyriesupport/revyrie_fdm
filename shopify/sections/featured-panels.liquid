               "id":"panel_2_gradient_enable",
               "label":"Display gradient effect",
               "default":true
            },
            {
               "type":"checkbox",
               "id":"panel_2_overlay_enable",
               "label":"Display overlay effect",
               "default":false
            },
            {
               "type":"select",
               "id":"panel_2_alignment",
               "label":"Image alignment",
               "default":"center center",
               "options":[
                  {
                     "value":"left top",
                     "label":"Left Top"
                  },

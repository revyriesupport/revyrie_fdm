{{ 'section-main-page.css' | asset_url | stylesheet_tag }}
{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    .section-{{ section.id }}-text_color {
      color: {{ section.settings.text_color}};
    }
    .section-{{ section.id }}-text_color p{
      font-size: {{ section.settings.content_font_size}}px;
      margin-top: 0;
      margin-bottom: 15px;
      line-height: 23.1167px;
    }
    @media screen and (max-width: 768px) {
      .section-{{ section.id }}-text_color p{
        font-size: {{ section.settings.content_font_size_mobile }}px;
      }
    }
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  .return-wrap .top-margin-small {
      margin-top: 30px;
    }
    .return-wrap .columns {
      padding-right: 8px;
    padding-left: 8px;
    min-width: 0;
    }
    @media print, screen and (min-width: 1024px) {
      .large-6 {
        -ms-flex: 0 0 50%;
        flex: 0 0 48%;
        max-width: 50%;
      }
    }
   @media print, screen and (max-width: 1023px) {
    .small-12 {
      -ms-flex: 0 0 100%;
      flex: 0 0 100%;
      max-width: 100%;
    }
   }
    .return-wrap .row.center{
      /* margin-top:45px; */
      display:flex;
      justify-content:center;
      flex-wrap: wrap;
    }
    .return-wrap .row.center .wide {
      color: #000;
      background: none;
     display: inline-block;
     text-align: center;
     vertical-align: middle;
     white-space: nowrap;
     font-size: 12.8px;
     letter-spacing: 1.2px;
     padding: 0px 16px;
     cursor: pointer;
     border: 1px solid #000;
     text-transform: uppercase;
     font-weight: 600;
     height: 45px;
     line-height: 45px;
     outline: none;
     min-width: 100%;
    }
    .return-wrap .row.center .wide:hover, .return-wrap .row.center .wide:focus {
      color: #d4857b;
      border-color: #d4857b;
  }
    .return-wrap p b a {
      color: #d4857b;
    }
     @media screen and (max-width: 749px) {
       .return-wrap .row.center .wide{
         padding: 0;
      width: 100%;
      display: flex;
      flex-grow: 1;
         justify-content: center;
       }
       .return-wrap .row.center .large-6{
          display: flex;
      width: 100%;
       }
       /* .return-wrap .row.center .large-6:nth-child(2) .wide{
         padding: 1rem 5rem;
       } */
     }
     .return-wrap .bottom-margin {
       margin-bottom: 60px;
     }
{%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding section-{{ section.id }}-text_color">
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} return-wrap">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
   "name":"Returns Center",
   "tag":"section",
   "class":"section",
   "settings":[
      {
         "type":"header",
         "content":"Section Padding"
      },
      {
         "type":"range",
         "id":"padding_top",
         "min":0,
         "max":100,
         "step":4,
         "unit":"px",
         "label":"Top Padding",
         "default":36
      },
      {
         "type":"range",
         "id":"padding_bottom",
         "min":0,
         "max":100,
         "step":4,
         "unit":"px",
         "label":"Bottom Padding",
         "default":36
      },
      {
         "type":"header",
         "content":"Section Text Color"
      },
      {
         "type":"color",
         "id":"text_color",
         "default":"#FFFFFF",
         "label":"Text Color"
      },
      {
         "type":"header",
         "content":"Section Font size"
      },
      {
         "type":"range",
         "id":"heading_font_size",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Heading Font Size Desktop",
         "default":32
      },
      {
         "type":"range",
         "id":"heading_font_size_mobile",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Heading Font Size Mobile",
         "default":32
      },
      {
         "type":"range",
         "id":"content_font_size",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Content Font Size Desktop",
         "default":13
      },
      {
         "type":"range",
         "id":"content_font_size_mobile",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Content Font Size Mobile",
         "default":13
      }
   ]
}
{% endschema %}

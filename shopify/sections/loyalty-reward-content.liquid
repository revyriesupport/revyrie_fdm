{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .loyalty_text_section h2{
      line-height: 1;
  }
  .loyalty_text_section .rich-text__blocks>*+* {
      margin-top: 10px;
  }
  .loyalty_text_section-{{ section.id }} {
      background-color: {{section.settings.background_color }};
  }
  .loyalty_text_section-{{ section.id }} h2.rich-text__heading.italic {
      font-family: var(--font-custom-family-heading-italic);
  }
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .loyalty_text_section-{{ section.id }} .rich-text__blocks.center {
      text-align: center;
  }
  .loyalty_text_section-{{ section.id }} .rich-text__blocks.right {
      text-align: right;
  }
  .loyalty_text_section .rich-text__buttons .button--secondary:before,
  .loyalty_text_section .rich-text__buttons .button--secondary:after {
    box-shadow: none;
  }
  .loyalty_text_section .rich-text__buttons .button--secondary {
    background: transparent;
  }
  .loyalty_text_section .rich-text__buttons .button--secondary:focus {
    outline: none;
    box-shadow: none;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="rich-text content-container loyalty_text_section loyalty_text_section-{{ section.id }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2
                class="rich-text__heading rte inline-richtext {{ block.settings.heading_font_style }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};color:{{ section.settings.text_color }};"
                {% endif %}
              >
                {{ block.settings.heading }}
              </h2>
         <div class="yotpo-widget-instance" data-yotpo-instance-id="94458"></div>
              <style>
              .loyalty_text_section-{{ section.id }} h2 {
                font-size: {{ block.settings.heading_font_size }}px;
              }
              @media screen and (max-width: 768px) {
                  .loyalty_text_section-{{ section.id }} h2 {
                    font-size: {{block.settings.heading_font_mobile_size }}px;
                  }
              }  
              </style>
            {%- when 'text' -%}
              <div
                class="rich-text__text rte {{ block.settings.text_style }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};color:{{ section.settings.text_color }};"
                {% endif %}
              >
                {{ block.settings.text }}
              </div>
              <style>
              .loyalty_text_section-{{ section.id }} .rich-text__text p {
                font-size: {{ block.settings.content_font_size }}px;
              }
              @media screen and (max-width: 768px) {
                  .loyalty_text_section-{{ section.id }} .rich-text__text p{
                    font-size: {{block.settings.content_font_mobile_size }}px;
                  }
              }  
              </style>
            {%- when 'button' -%}
              <div
                class="rich-text__buttons {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {%- if block.settings.button_label != blank -%}
                  <a
                    
                      href="javascript:void(0)"
                   
                    class="swell-history-link button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                    style="color:{{ section.settings.text_color }}; border: 1px solid {{ section.settings.text_color }};"
                  >
                    {{- block.settings.button_label | escape -}}
                  </a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
<script>
  var swell_history_link =  document.querySelector('.swell-history-link');
  swell_history_link.addEventListener("click", function(){
    swellAPI.showPopupByType("HistoryPopup");
  });



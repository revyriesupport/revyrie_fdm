{{ 'bra-style-guide.css' | asset_url | stylesheet_tag }}
{{ 'flickity.min.css' | asset_url | stylesheet_tag }}
<script src="{{ 'flickity.pkgd.min.js' | asset_url }}"></script>
{% style %}
  .size-guide-wrapper .product-carousel-cell h4{    
    margin-top: 0;
    margin-bottom: 10px;
    letter-spacing: .02rem;
    line-height: 1.7;
    font-family: proxima-nova,Helvetica,Roboto,Arial,sans-serif;
    font-weight: 600;
  }
  .size-guide-wrapper .main-carousel .product-carousel-cell img{
    width: 100%;
    margin-bottom: 15px;
  }
  .size-guide-wrapper .main-carousel .product-carousel-cell p{
        max-width: 350px;
    margin-left: inherit;
    margin-right: inherit;
  }
   .size-guide-wrapper .main-carousel .flickity-page-dots {
	 display: none;
}
 @media screen and (max-width: 639px) {
	 .size-guide-wrapper .main-carousel .flickity-page-dots {
		 display: block;
		 bottom: 115px;
	}
}
   @media screen and (max-width: 475px) {
	 .size-guide-wrapper .main-carousel .flickity-page-dots {
		 display: block;
		 bottom: 157px;
	}
}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
   .size-guide-wrapper .desktop_content_position {
    text-align: {{ section.settings.desktop_content_position }};
  }
   .size-guide-wrapper .guide_title_style {
    font-size: {{ section.settings.title_font_size_desktop }}px;
    color: {{ section.settings.title_text_color }};
  }
   .size-guide-wrapper .guide_sub_title_style {
    font-size: {{ section.settings.sub_title_font_size_desktop }}px;
    color: {{ section.settings.sub_title_text_color }};
  }
  @media screen and (max-width: 749px) {
    .size-guide-wrapper .guide_title_style {
      font-size: {{ section.settings.title_font_size_mobile }}px;
    }
    .size-guide-wrapper .guide_sub_title_style {
      font-size: {{ section.settings.sub_title_font_size_mobile }}px;
    }
  }
  .product-carousel-cell{
    paddimg:0 10px;
  }

{% endstyle %}

<div id="{{ section.settings.section_identifier }}" class="size-guide-wrapper section-{{ section.id }}-padding">
	<div class="row align-center">
		<div class="large-5 medium-7 small-12 columns desktop_content_position">
			<h2 class="guide_title_style">{{ section.settings.title }}</h2>
			<p class="guide_sub_title_style">{{ section.settings.sub-title }}</p>
		</div><!-- large-5 medium-7 small-12 columns -->
	</div>
  <div class="row align-center top-margin">
		<div class="large-12 medium-12 small-12 columns ">
	<slider-component class="slider-mobile-gutter page-width">
		<ul id="Slider-{{ section.id }}" class="main-carousel main-carousel-{{ section.id }} grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down" role="list" aria-label="{{ 'general.slider.name' | t }}">
			{%- for block in section.blocks -%}
            <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="grid__item">
				<div class="product-carousel-cell">
					<a class="card-wrapper" href="{{ block.settings.product_collection.url }}" alt="{{ block.settings.product_title }}">
                      {{ block.settings.product_image | image_url: width: 3800 | image_tag: loading: 'lazy' }}
						<h4>{{ block.settings.product_title }}</h4>
						<p class="product-sentence-case">{{ block.settings.product_description }}</p>
					</a>
				</div>
			</li>
              {% endfor %}
		</ul>
	</slider-component>
        </div>
  </div>
</div>
<script>
var elem = document.querySelector('.main-carousel-{{ section.id }}');
var flkty = new Flickity( elem, {
  // options
    wrapAround: true,
    percentPosition: false,
    pageDots: true,
    cellAlign: "left",
    imagesLoaded: true,
    freeScroll: true,
    contain: true
});
</script>
{% schema %}
  {
    "name": "Bra style guide",
    "settings": [
      {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Content Position"
    },
      {
         "type":"inline_richtext",
         "id":"title",
         "label":"Title",
         "default":"bra <em>style</em> guide"
      },
      {
         "type":"color",
         "id":"title_text_color",
         "default":"#000000",
         "label":"Title Text Color"
      },
      {
         "type":"range",
         "id":"title_font_size_desktop",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Title Font Size Desktop",
         "default":42
      },
      {
         "type":"range",
         "id":"title_font_size_mobile",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Title Font Size Mobile",
         "default":32
      },
      {
         "type":"inline_richtext",
         "id":"sub-title",
         "label":"Sub Title",
        "default":"The right bra should reflect your own personal style. Meet our core bra shapes to find one that feels just right for you."
      },
      {
         "type":"color",
         "id":"sub_title_text_color",
         "default":"#000000",
         "label":"Sub Title Text Color"
      },
      {
         "type":"range",
         "id":"sub_title_font_size_desktop",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"sub title Font Size Desktop",
         "default":13
      },
      {
         "type":"range",
         "id":"sub_title_font_size_mobile",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Sub title Font Size Mobile",
         "default":13
      },
      {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "t:sections.collection-list.settings.columns_desktop.label"
    },
      {
      "type": "header",
      "content": "Mobile Layout"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "1",
      "label": "Number of columns on mobile"
    },
      {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
      {
      "type": "text",
      "id": "section_identifier",
      "label": "Section Identifier"
    }
    ],
    "blocks": [
    {
      "type": "size-guide-slider",
      "name": "Slider Content",
      "settings": [
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Slider Product image for desktop"
        },
        {
          "type": "image_picker",
          "id": "product_image_mobile",
          "label": "Slider Product image for Mobile"
        },
        {
         "type":"inline_richtext",
         "id":"product_title",
         "label":"Slider Product Title"
      },
        {
         "type":"inline_richtext",
         "id":"product_description",
         "label":"Slider Product Description"
      },
        {
          "type": "collection",
          "id": "product_collection",
          "label": "Collection"
        }
      ]
    }
  ]
  }
{% endschema %}

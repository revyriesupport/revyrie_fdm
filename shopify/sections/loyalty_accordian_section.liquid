{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
<style>
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .loyalty_accordion_{{ section.id }} .loyalty_accordian_heading {
      font-size: {{ section.settings.heading_font_size }}px;
  }
  .loyalty_accordion_{{ section.id }} .loyalty_accordian_heading.left {
      text-align: left;
  }
  .loyalty_accordion_{{ section.id }} .loyalty_accordian_heading.center {
      text-align: center;
  }
  .loyalty_accordion_{{ section.id }} .loyalty_accordian_heading.right {
      text-align: right;
  }
  h2.loyalty_accordian_heading.italic {
      font-family: var(--font-custom-family-heading-italic);
  }
  .loyalty_accordion .accordion summary:before {
      content: url({{ 'icon-arrow-down.svg' | asset_url }});
  }
  .loyalty_accordion .accordion details[open]>summary:before {
  content: url({{ 'icon-arrow-down.svg' | asset_url }});
      transform: rotate(180deg);
  }   
  .loyalty_accordion.loyalty_accordion_{{ section.id }} .accordion__title {
      font-size: {{ section.settings.accordion_font_size }}px;
      color: {{ section.settings.accordian_color}};
      text-transform: lowercase;
  }
  .loyalty_accordion .accordion summary {
      border-bottom: 1px solid #000;
      padding-right: 40px;
  }
  .loyalty_accordion  .accordion {
      border-bottom-color: transparent; 
  }
  .loyalty_accordion .accordion .accordion__content {
      margin-top: 15px;
      padding-bottom: 15px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .loyalty_accordion .page-width--narrow {
        max-width: 84.6rem;
    }
  }
  @media screen and (max-width: 749px) {
    .loyalty_accordion_{{ section.id }} .loyalty_accordian_heading {
        font-size: {{ section.settings.heading_font_mobile_size }}px;
    }
    .loyalty_accordion.loyalty_accordion_{{ section.id }} .accordion__title {
      font-size: {{ section.settings.accordion_font_size_mobile }}px;
    }
    .loyalty_accordion .page-width {
      padding: 0 24px;
    }
  }
</style>
<div class="loyalty_accordion loyalty_accordion_{{ section.id }} section-{{ section.id }}-padding">
<div class="swell-unauthenticated swell-authenticated page-width page-width--narrow">
  <h2 class="loyalty_accordian_heading {{ section.settings.heading_font_style }} {{ section.settings.heading_alignment }}">{{ section.settings.heading }}</h2>
  {% for article in blogs.fleur-rewards.articles %}
  <div class="product__accordion accordion quick-add-hidden">
    <details id="Details-{{ forloop.index }}">
      <summary>
        <div class="summary__title">
          <h2 class="h4 accordion__title inline-richtext">
            {{ article.title }}
          </h2>
        </div>
      </summary>
      <div class="accordion__content rte" id="ProductAccordion-{{ forloop.index }}">
        {% if article.content.size > 0 %}
        {{ article.content }}
          {% endif %}
      </div>
    </details>
  </div>
 {% endfor %}
</div>
</div>
{% schema %}
  {
    "name": "Loyalty Accordian",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "header",
        "content": "Accordian"
      },
      {
        "type": "text",
        "id": "heading",
        "default": "got questions?",
        "label": "Heading"
      },
      {
          "type": "range",
          "id": "heading_font_size",
          "min": 0,
          "max": 100,
          "step": 1,
          "label": "t:sections.image-banner.blocks.heading.settings.heading_font_size.label",
          "default": 80
        },
        {
          "type": "range",
          "id": "heading_font_mobile_size",
          "min": 0,
          "max": 80,
          "step": 1,
          "label": "t:sections.image-banner.blocks.heading.settings.heading_font_mobile_size.label",
          "default": 64
        },
        {
          "type": "select",
          "id": "heading_font_style",
          "options": [
            {
              "value": "regular",
              "label": "Regular"
            },
            {
              "value": "italic",
              "label": "Italic"
            }
          ],
          "default": "regular",
          "label": "Heading Style"
        },
        {
          "type": "select",
          "id": "heading_alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center",
          "label": "Heading Alignment"
        },
        {
          "type": "header",
          "content": "Accordian Font"
        },
        {
           "type":"color",
           "id":"accordian_color",
           "default":"#000000",
           "label":"Text Color"
        },
        {
           "type":"range",
           "id":"accordion_font_size",
           "min":0,
           "max":100,
           "step":1,
           "unit":"px",
           "label":"Accordion Title Font Size Desktop",
           "default":20
        },
        {
           "type":"range",
           "id":"accordion_font_size_mobile",
           "min":0,
           "max":100,
           "step":1,
           "unit":"px",
           "label":"Accordion Title Font Size Mobile",
           "default":18
        },
        {
          "type": "header",
          "content": "t:sections.all.padding.section_padding_heading"
        },
        {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 40
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 52
        }
    ],
    "presets": [
    {
      "name": "Loyalty Accordian"
    }
  ]
  }
{% endschema %}


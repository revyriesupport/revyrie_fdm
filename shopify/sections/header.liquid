      img.setAttribute('open', 'open');
      const captionElement = img.children[0];
      captionElement.setAttribute('aria-expanded', 'true');
	});
  img.addEventListener("mouseleave", (e) => {
      img.removeAttribute('open', 'open');
      const captionElement = img.children[0];
      captionElement.setAttribute('aria-expanded', 'false');
    
	});
});
/*======== Acoordian Js ========*/
const accSingleTriggers = document.querySelectorAll('.accordionitem_title');

accSingleTriggers.forEach(trigger => trigger.addEventListener('click', toggleAccordion));

function toggleAccordion() {
  const items = document.querySelectorAll('.accordionItem');
  const thisItem = this.parentNode;

  items.forEach(item => {
  let content = thisItem.children[1];
    if (thisItem == item) {
      thisItem.classList.toggle('is-open');
      if (content.style.maxHeight) {
          content.style.maxHeight = null;
      } else {
          content.style.maxHeight = content.scrollHeight + "px";
      }
      return;
    }
    item.classList.remove('is-open');
  });
}
  

{{ 'flickity.min.css' | asset_url | stylesheet_tag }}
<script src="{{ 'flickity.pkgd.min.js' | asset_url }}"></script>
{{ 'collection-product-slider.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
   .blog-related-slider .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
   .blog-related-slider .collection_product_{{ section.id }} .collection__title  h2{
      font-size: {{ section.settings.heading_font_size }}px;
    }
   .blog-related-slider .collection_product_{{ section.id }} .collection__title  .rte h3 {
      font-size: {{ section.settings.subtitle_font_size }}px;
    }
   .blog-related-slider .collection_product_{{ section.id }} .collection__title.title-wrapper {
      margin-bottom: {{ section.settings.margin_bottom }}px;
       border-top: 1px solid #ececec;
      padding-top:60px;
    }
    @media screen and (min-width: 750px) {
     .blog-related-slider .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
   @media screen and (max-width: 749px) {
      .blog-related-slider .collection_product_{{ section.id }} .collection__description h2{
          font-size: {{ section.settings.heading_font_mobile_size }}px;
        }
    .blog-related-slider .collection_product_{{ section.id }} .collection__description .rte h3{
        font-size: {{ section.settings.subtitle_mobile_font_size }}px;
      }
    }
    .blog-related-slider .collection_product_section .grid--3-col-desktop .grid__item img,
    .blog-related-slider .collection_product_section .grid--2-col-desktop .grid__item img,
    .blog-related-slider .collection_product_section .grid--1-col-desktop .grid__item img{
      max-width: 100%;
      width: 100%;
  /*    max-height: 300px;*/
      object-fit: cover;
      object-position: top center;
  }
   .blog-related-slider .article-card-wrapper .card__inner .article-image{
       max-width: 100%;
      width: 100%;
     max-height: 300px;
      object-fit: cover;
      object-position: top center;
    }
   .blog-related-slider .article-category {
        margin-top: 15px;
      font-size:13px;
    }
   .blog-related-slider .article-category a{
          color: #d4857b;
      font-weight: 500;
      text-decoration: none;
      outline: none;
    }
   .blog-related-slider h3.card__heading{
        text-transform: initial;
      font-size: 28.8px;
      line-height: 1.2;
      margin-top: 10px;
    }
    .blog-related-slider .copy.article-subtitle{
        margin-top: 15px;
      font-size: 17.6px;
    }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} isolate gradient blog-related-slider">
  <div class="collection collection_product_section collection_product_{{ section.id }} section-{{ section.id }}-padding{% if section.settings.full_width %} collection--full-width{% endif %}">
    <div class="collection__title title-wrapper title-wrapper--no-top-margin page-width  {{ section.settings.text_position }}">
      {%- if section.settings.title != blank -%}
        <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.title | escape }}</h2>
      {%- endif -%}
      {%- if section.settings.subtitle != blank -%}
        <div class="collection__subtitle rte">
          <h3>{{ section.settings.subtitle1 -}}</h3>
        </div>
      {%- endif -%}
    </div>
    <slider-component class="slider-mobile-gutter page-width">
      <ul
        id="Slider-{{ section.id }}"
        class="grid-configaa main-carousel main-carousel-{{ section.id }} cproduct-grid contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid--{{ section.settings.columns_desktop }}-col-desktop{% if section.settings.collection == blank %} grid--2-col-tablet-down{% else %} grid--{{ section.settings.columns_mobile }}-col-tablet-down{% endif %}"
        role="list"
        aria-label="{{ 'general.slider.name' | t }}"
      >
        {%- for article in blog.articles limit: section.settings.products_to_show -%}
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="grid__item"
          >
            {%-
              render 'article-card',
              article: article,
              media_height: section.settings.image_height,
              media_aspect_ratio: article.image.aspect_ratio,
              show_image: section.settings.show_image,
              show_date: section.settings.show_date,
              show_author: section.settings.show_author,
              show_excerpt: true,
            -%}
          </li>
        {%- else -%}
          {%- for i in (1..4) -%}
            <li class="grid__item">
              {% render 'card-product', show_vendor: section.settings.show_vendor %}
            </li>
          {%- endfor -%}
        {%- endfor -%}
      </ul>
    </slider-component>
  </div>
</div>

<script>
  var elem = document.querySelector('.main-carousel-{{ section.id }}');
  var flkty = new Flickity( elem, {
    // options
      wrapAround: true,
      percentPosition: false,
      pageDots: false,
      cellAlign: "left",
      imagesLoaded: true,
      freeScroll: true,
      contain: true
  });
</script>
{% schema %}
{
  "name": "Related Stories",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Related Stories",
      "label": "t:sections.collection-product-slider.settings.title.label"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "t:sections.collection-product-slider.settings.heading_font_size.label",
      "default": 32
    },
    {
      "type": "range",
      "id": "heading_font_mobile_size",
      "min": 0,
      "max": 40,
      "step": 1,
      "label": "t:sections.collection-product-slider.settings.heading_font_mobile_size.label",
      "default": 24
    },
    {
      "type": "text",
      "id": "subtitle1",
      "label": "t:sections.collection-product-slider.settings.subtitle.label"
    },
    {
      "type": "range",
      "id": "subtitle_font_size",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "t:sections.collection-product-slider.settings.subtitle_font_size.label",
      "default": 19
    },
    {
      "type": "range",
      "id": "subtitle_mobile_font_size",
      "min": 0,
      "max": 40,
      "step": 1,
      "label": "t:sections.collection-product-slider.settings.subtitle_mobile_font_size.label",
      "default": 19
    },
    {
      "type": "select",
      "id": "text_position",
      "options": [
        {
          "value": "left",
          "label": "left"
        },
        {
          "value": "center",
          "label": "center"
        },
        {
          "value": "right",
          "label": "right"
        }
      ],
      "default": "center",
      "label": "Heading Alignment"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 25,
      "step": 1,
      "default": 4,
      "label": "t:sections.collection-product-slider.settings.products_to_show.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "t:sections.collection-product-slider.settings.columns_desktop.label"
    },
    {
      "type": "header",
      "content": "t:sections.collection-product-slider.settings.header_mobile.content"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "2",
      "label": "t:sections.collection-product-slider.settings.columns_mobile.label",
      "options": [
        {
          "value": "1",
          "label": "t:sections.collection-product-slider.settings.columns_mobile.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.collection-product-slider.settings.columns_mobile.options__2.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.collection-product-slider.settings.header_margin_bottom.content"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.collection-product-slider.settings.margin_bottom.label",
      "default": 30
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.collection-product-slider.presets.name"
    }
  ]
}
{% endschema %}

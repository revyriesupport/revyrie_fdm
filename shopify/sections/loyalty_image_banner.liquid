{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

{%- if section.settings.image_height == 'adapt' and section.settings.image != blank -%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before,
      #Banner-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}

{%- style -%}
  .loyalty_banner_section.banner {
      min-height: 400px;
      max-width: 100% !important;
  }
  @media screen and (min-width: 1400px) {
    .loyalty_banner_section.banner {
        height: 500px;
    }
  }
  
  .loyalty_banner_section .banner__content .banner__text {
      margin: 0 auto;
  }
  .loyalty_banner_section .banner__content .banner__text {
      max-width: 603px;
  }
  .banner--stacked:not(.banner--mobile-bottom):not(.banner--adapt) .banner__content {
      position: relative;
  }
  .loyalty_banner_section .banner__buttons--multiple>* {
      min-width: 200px;
      min-height: 45px;
  }
  .loyalty_banner_section .button--secondary, .loyalty_banner_section .button--secondary {
      border: 1px solid;
  }
  .loyalty_banner_section .button--secondary:after, .loyalty_banner_section .button--secondary:before {
      box-shadow: none;
  }
  .loyalty_banner_section .banner__buttons {
      margin-top: 50px;
  }
  @media screen and (min-width: 768px) {
    .loyalty_banner_section .banner__buttons.banner__buttons--multiple a:last-child {
      margin-left: 30px;
    }
  }
  @media screen and (max-width: 768px) {
    .loyalty_banner_section .banner__buttons {
      max-width: 20rem;
      gap: 15px;
    }
  }
  
  #Banner-{{ section.id }}::after {
    left: 0;
  }
  
  #Banner-{{ section.id }} .color_content .banner__heading,
  #Banner-{{ section.id }} .color_content .button--primary,
  #Banner-{{ section.id }} .color_content .button--secondary,
  #Banner-{{ section.id }} .color_content {
    color: {{ section.settings.banner_color }};
  } 
   #Banner-{{ section.id }} .color_content .button--secondary{
     border-color: {{ section.settings.banner_color }};
   }
  #Banner-{{ section.id }} .color_content .button--primary{
    border-bottom-color: {{ section.settings.banner_color }};
  } 
  #Banner-{{ section.id }}.banner-section-row-collapse{
    max-width: var(--page-width);
    padding: 0;
    margin: 0 auto;
  }
  #Banner-{{ section.id }}.banner-section-row-expanded{
    max-width: 100%;
    margin: 0 8px;
  }

  
  #Banner-{{ section.id }}::after {
      opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
    }
  @media screen and (max-width: 749px) {
    #Banner-{{ section.id }}::after {
      opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
    }
    #Banner-{{ section.id }} .color_content .banner__heading {
      letter-spacing: 0;
    }
    
    #Banner-{{ section.id }} .color_content .banner__heading,
    #Banner-{{ section.id }} .color_content .button--primary,
    #Banner-{{ section.id }} .color_content .button--secondary,
    #Banner-{{ section.id }} .color_content {
      color: {{ section.settings.banner_color_mobile }};
    }
    #Banner-{{ section.id }} .color_content .button--secondary {
      border-color: {{ section.settings.banner_color_mobile }};
    }
    #Banner-{{ section.id }} .color_content .button--primary{
      border-bottom-color: {{ section.settings.banner_color_mobile }};
    } 
  }

.loyalty_login_box {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1005;
    background-color: #0a0a0a73;
    overflow-y: scroll;
    background: rgba(0,0,0,.7);
    display:none;
}
.loyalty_login_box .loyalty_login {
    background: #fff;
    padding: 40px !important;
    max-width: 650px !important;
    margin: 0 auto;
    height: 460px;
    margin-top: 40px;
    position: relative;
}
.loyalty_login_box .customer .field label {
    position: relative;
    top: 0;
    text-align: left;
    left: 0;
}
.loyalty_login_box  .customer .field {
    display: inherit;
}
.loyalty_login_box  .customer .field:before, 
.loyalty_login_box .customer select:before{
    display: none;
}
.loyalty_login_box .customer .field:after, 
.loyalty_login_box .customer select:after {
    display: none;
}
.loyalty_login_box  .customer .field input {
    border: 1px solid #000;
    height: 28px;
    padding: 9.6px;
    font-size: 14.4px;
}
.loyalty_login_box .customer .field input:focus {
    box-shadow: none;
}
.loyalty_login_box .customer .field label,
.loyalty_login_box .customer .field input:focus~label {
    font-size: 12.8px;
    top: 0;
    left: 0;
    letter-spacing: 0;
}
.loyalty_login_box .customer button:hover {
    color: #d4857b;
}
.login .loyalty_login_button  a {
    margin: 0;
    text-decoration: none;
    color: #d4857b;
    letter-spacing: 0;
    font-size: 13.6px;
}
.loyalty_login_box .customer button {
    margin-top: 30px;
    margin-bottom: 25px;
    text-transform: uppercase;
    font-size: 12.8px;
    min-width: 87px;
    min-height: 45px;
    display: list-item;
}
.loyalty_login_box  .login a[href="#recover"] {
    margin-left: 0;
    margin-right: 0;
    display: block;
    float: left;
    width: 100%;
    text-align: left;
}
.loyalty_login_box .login {
    padding-top:0 !important;
    min-height: auto;
}
@media screen and (min-width: 750px) {
    .loyalty_login_box .customer:not(.account):not(.order) {
        max-width: 32.8rem !important;
        padding-top:0;
    }
    .loyalty_banner_section .banner__content {
      padding: 3rem 5rem;
    }
} 
div#recover_box #recover, div#recover_box #recover+div {
    display: block;
}
div#recover_box {
    display: none;
}
div#recover_box.active_recoverblock {
   display: block;
}
.login_box.hide_loginbox, 
.login_box.hide_loginbox #login, 
.login_box.hide_loginbox #login+div {
    display: none;
}
.loyalty_login_box .login_cancle a {
    width: 100%;
    margin: 0;
    text-align: left;
    text-decoration: none;
    letter-spacing: 0;
}
.passwordsubmit,
.login_cancle {
    width: 100%;
    float: left;
}
.loyalty_login_box .customer .field input::placeholder {
    opacity: 1;
}
.loyalty_login_box .customer .field {
    margin: 30px 0 0;
}
.loyalty_login_box .customer button:hover:before, .loyalty_login_box .customer button:hover:after {
    box-shadow: none;
}
.loyalty_register_close,
.loyalty_login_close {
    position: absolute;
    right: 23px;
    font-size: 28.8px;
    top: 20px;
    top: 4px;
    right: 10px;
    cursor: pointer;
}
 .loyalty_register_block {
    background: #fff;
    padding: 40px !important;
    max-width: 650px !important;
    margin: 0 auto;
    margin-top: 30px;
    position:relative;
}
body.overflow_hidden{

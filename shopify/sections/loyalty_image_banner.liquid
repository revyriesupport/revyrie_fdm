<script>
function forgetPasswordButton(){
  document.querySelector('.recoverblock-{{ section.id }}').classList.add('active_recoverblock');
  document.querySelector('.loginblock-{{ section.id }}').classList.add('hide_loginbox');
}
function cancleForgetPassword(){
  document.querySelector('.recoverblock-{{ section.id }}').classList.remove('active_recoverblock');
  document.querySelector('.loginblock-{{ section.id }}').classList.remove('hide_loginbox');
}
function loginClose(){
  document.querySelector('body').classList.remove('overflow_hidden');
  document.querySelector('.loyalty_login_box_{{ section.id }}').style.display = 'none';
}
function openLoginModal(){
  document.querySelector('body').classList.add('overflow_hidden');
  document.querySelector('.loyalty_login_box_{{ section.id }}').style.display = 'block';
}
function createAccount(){

{{ 'section-main-page.css' | asset_url | stylesheet_tag }}
{{ 'section-main-sustainability.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    /* padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px; */
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .sustainability-wrapper h2 {
    font-size: {{ section.settings.heading_font_size }}px;
    color: {{ section.settings.text_color }} !important;
  }
   .sustainability-wrapper .action , .sustainability-wrapper p{
    font-size: {{ section.settings.content_font_size }}px;
     color: {{ section.settings.text_color }} !important;
  }
  @media screen and (max-width: 768px) {
    .sustainability-wrapper h2 {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
    }
    .sustainability-wrapper .action , .sustainability-wrapper p{
        font-size: {{ section.settings.content_font_size_mobile }}px;
    }
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      /* padding-top: {{ section.settings.padding_top }}px; */
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="page-width sustainability-wrapper">
  <div class="row align-center section-{{ section.id }}-padding">
    <div class="medium-12 small-12 columns">
      <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
        {{ page.title | escape }}
      </h1>
      <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ page.content }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
   "name":"Sustainability",
   "tag":"section",
   "class":"section",
   "settings":[
      {
         "type":"header",
         "content":"Section Font size and color"
      },
      {
         "type":"color",
         "id":"text_color",
         "default":"#000000",
         "label":"Text Color"
      },
      {
         "type":"range",
         "id":"heading_font_size",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Heading Font Size Desktop",
         "default":35
      },
      {
         "type":"range",
         "id":"heading_font_size_mobile",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Heading Font Size Mobile",
         "default":35
      },
      {
         "type":"range",
         "id":"content_font_size",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Content Font Size Desktop",
         "default":13
      },
      {
         "type":"range",
         "id":"content_font_size_mobile",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Content Font Size Mobile",
         "default":13
      },
      {
         "type":"header",
         "content":"t:sections.all.padding.section_padding_heading"
      },
      {
         "type":"range",
         "id":"padding_top",
         "min":0,
         "max":100,
         "step":4,
         "unit":"px",
         "label":"t:sections.all.padding.padding_top",
         "default":36
      },
      {
         "type":"range",
         "id":"padding_bottom",
         "min":0,
         "max":100,
         "step":4,
         "unit":"px",
         "label":"t:sections.all.padding.padding_bottom",
         "default":36
      }
   ]
}
{% endschema %}

{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    .contact-us-wrap-{{ section.id }} a{
        color: #d4857b;
    }
    .contact-us-wrap-{{ section.id }} h1.main-page-title,
    .multicolumn .title-wrapper-with-link{
      text-align:center;
          margin-bottom:10px;
    }
    .contact-us-wrap-{{ section.id }} .row{
         display: flex;
      flex-flow: row wrap;
      justify-content: space-between;
      width: 95%;
      margin: 0 auto;
  }
  .contact-us-wrap-{{ section.id }} .large-10 p:nth-child(3){
    margin-top: 15px;
        margin-bottom: 40px;
  }
  .contact-us-wrap-{{ section.id }} .large-10 h3{
    margin-bottom: 10px;
  }

   .contact-us-wrap-{{ section.id }} .medium-6{
          flex: 0 0 50%;
      max-width: 50%;
  }
     .contact-us-wrap-{{ section.id }} .medium-6 img{
           width: 250px;
      margin-bottom: 30px;
       margin:0 auto;
     }
     .contact-us-wrap-{{ section.id }} #stores,
    .contact-us-wrap-{{ section.id }} .top-margin{
          padding-top: 60px;
       margin-bottom: 10px;
           line-height: 1.7;
    }
   .contact-us-wrap-{{ section.id }} .large-10{
          flex: 0 0 100%;
      max-width: 100%;
         margin: 0 auto;
         display: flex;
      justify-content: center;
     flex-direction: column;
    }
    }


    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
{%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding contact-us-wrap-{{ section.id }}">
  <h1 class="main-page-title page-title {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {{ page.title | escape }}
  </h1>
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} contact-us-content-wrap-{{ section.id }}">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}

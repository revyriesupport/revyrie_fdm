{{ 'main-careers.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .career-wrapper .career_gird_heading{
    color: {{section.settings.heading_text_color}};
    font-size: {{ section.settings.heading_font_size }}px;
  }

  .career-wrapper .career_gird_content {
    color: {{section.settings.content_text_color}};
    font-size: {{ section.settings.content_font_size }}px;
  }
  @media screen and (max-width: 768px) {
    .career-wrapper .career_gird_heading{
      font-size: {{ section.settings.heading_font_size_mobile }}px;
    }

    .career-wrapper .career_gird_content {
        font-size: {{ section.settings.content_font_size_mobile }}px;
    }
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="row align-center career-wrapper">

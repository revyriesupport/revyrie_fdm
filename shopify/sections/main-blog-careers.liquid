{% schema %}
{
  "name": "blog Careers Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "font Size and color section"
    },
    {
         "type":"color",
         "id":"heading_text_color",
         "default":"#000000",
         "label":"Heading Text Color"
      },
      {
         "type":"range",
         "id":"heading_font_size",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Heading Font Size Desktop",
         "default":13
      },
      {
         "type":"range",
         "id":"heading_font_size_mobile",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Heading Font Size Mobile",
         "default":14
      },
    {
         "type":"color",
         "id":"content_text_color",
         "default":"#d4857b",
         "label":"Content Text Color"
      },
      {
         "type":"range",
         "id":"content_font_size",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Content Font Size Desktop",
         "default":14
      },
      {
         "type":"range",
         "id":"content_font_size_mobile",
         "min":0,
         "max":100,
         "step":1,
         "unit":"px",
         "label":"Content Font Size Mobile",
         "default":13
      },
    {
      "type": "textarea",
      "id": "page_description",
      "label": "Page Description",
      "default": "We're always looking for amazing, hard working, talented people to join our team. For general inquiries, please send your resume and cover letter to <a href='mailto:talent@fleurdumal.com'>talent@fleurdumal.com</a> to inquire about open positions."
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}

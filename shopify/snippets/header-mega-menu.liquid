                                {%- endif -%}
                                {%- if block.settings.hide_desktop_5 == false -%}
                                {%- if block.settings.image_5 != blank -%}
                                  <li class="header_image_block header_img_content_five {% if block.settings.marge_five == true %}blockwidth_fifty{% endif %}" data-index="{{ forloop.index }}">
                                    <a href="{{ block.settings.block_link_5 }}" aria-label="{{ block.settings.heading_5 }}">
                                      <div class="header_image_top"></div>
                                      <div class="header_img_content">
                                        <h5>{{ block.settings.heading_5 }} <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-arrow-right" viewBox="0 0 10 20"><path d="M0 20c0-5.5 5.5-10 10-10C5.5 10 0 5.5 0 0v20"></path></svg></h5>
                                        <div>{{ block.settings.content_5 }}</div>
                                      </div>
                                    </a>
                                  </li>
                                  <style>
                                      .header_img_content_five[data-index="{{ forloop.index }}"] .header_image_top{
                                        background-image: url({{ block.settings.image_5 | img_url: 'master' }});
                                      }
                                      .header_img_content_five[data-index="{{ forloop.index }}"] .header_img_content{
                                        text-align: {{ block.settings.text_position_five }};
                                      }
                                      .header_img_content_five[data-index="{{ forloop.index }}"] h5{
                                        font-size: {{ block.settings.heading_5_font_size }}px;
                                        color: {{ block.settings.heading_5_color }};
                                        justify-content: {{ block.settings.text_position_five }};
                                      }
                                      .header_img_content_five[data-index="{{ forloop.index }}"] div.header_img_content div{
                                        font-size: {{ block.settings.content_5_font_size }}px;
                                        color: {{ block.settings.content_5_color }};
                                      }
                                  </style>
                                {%- endif -%}
                                {%- endif -%}
                               {%- if block.settings.hide_desktop_6 == false -%}
                                {%- if block.settings.image_6 != blank -%}
                                  <li class="header_image_block header_img_content_six {% if block.settings.marge_six == true %}blockwidth_fifty{% endif %}" data-index="{{ forloop.index }}">
                                    <a href="{{ block.settings.block_link_6 }}" aria-label="{{ block.settings.heading_6 }}">
                                      <div class="header_image_top"></div>
                                      <div class="header_img_content">
                                        <h5>{{ block.settings.heading_6 }} <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-arrow-right" viewBox="0 0 10 20"><path d="M0 20c0-5.5 6.5-10 10-10C6.5 10 0 5.5 0 0v20"></path></svg></h5>
                                        <div>{{ block.settings.content_6 }}</div>
                                      </div>
                                    </a>
                                  </li>
                                  <style>
                                      .header_img_content_six[data-index="{{ forloop.index }}"] .header_image_top{
                                        background-image: url({{ block.settings.image_6 | img_url: 'master' }});

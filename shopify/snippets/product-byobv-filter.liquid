                        {% endunless %}
                      {% endfor %}
                    </div>
                    <!-- carousel carousel-main columns hide-for-small-only -->
                  </div>
                  <!-- product-gallery row align-middle small-collapse medium-uncollapse -->
                </div>
                <!-- medium-11 small-12 columns -->
              </div>
              <!-- row collapse -->
            </div>
            {% comment %}{% endcomment %}
            <!-- product-gallery-wrapper -->

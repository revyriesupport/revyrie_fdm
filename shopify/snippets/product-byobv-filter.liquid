                                <!-- product-single__media -->
                              </div>
                              <!-- carousel-cell -->
                            {% else %}
                              <div class="carousel-cell">
                                <div
                                  class="product-single__media"
                                  style="padding-top: 100%;"
                                  data-media-id="{{ media.id }}"

<style>
  /*================ Social Sharing ================*/
   ul.social-sharing, ul.contact-options {
  	 margin-top: 10px;
  }
   ul.social-sharing li, ul.contact-options li {
  	 display: inline-block;
  	 margin-right: 10px;
  	 line-height: 1;
  }
   ul.social-sharing li a, ul.contact-options li a {
  	 color: #000;
  }
   ul.social-sharing li a .icon, ul.contact-options li a .icon {
  	 width: 25px;
  	 height: 25px;
  }
   ul.social-sharing li a span, ul.contact-options li a span {
  	 display: none;
  }
   ul.social-sharing li:last-child, ul.contact-options li:last-child {
  	 margin-right: 0px;
  }
</style>

<ul class="social-sharing">
  <li>
    <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
      {% include 'icon-facebook' %}
      <span aria-hidden="true">{{ 'general.social.links.facebook' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>
  </li>
  <li>
    <a
      target="_blank"
      href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}"
    >
      {% include 'icon-twitter' %}
      <span aria-hidden="true">{{ 'general.social.links.twitter' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>
  </li>
  <li>
    <a
      target="_blank"
      href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}"
    >
      {% include 'icon-pinterest' %}
      <span aria-hidden="true">{{ 'general.social.links.pinterest' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>
  </li>
</ul>

<script>
  window.shopUrl = '{{ request.origin }}';
  window.routes = {
    cart_add_url: '{{ routes.cart_add_url }}',
    cart_change_url: '{{ routes.cart_change_url }}',
    cart_update_url: '{{ routes.cart_update_url }}',
    cart_url: '{{ routes.cart_url }}',
    predictive_search_url: '{{ routes.predictive_search_url }}'
  };

  window.cartStrings = {
    error: `{{ 'sections.cart.cart_error' | t }}`,
    quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`
  }

  window.cartGiftLover = {
    giftLoverEnable: `{{ settings.gift_cart_lover_enable }}`,
    giftLoverTitle: `{{ settings.gift_cart_lover_title }}`,
    giftLoverProduct: `{{ settings.gift_cart_lover_product }}`,
    giftLoverContent: `{{ settings.gift_lover_content | strip_html | split: "[money]" | first }}`,
    giftLoverNote: `{{ settings.gift_lover_note }}`,
    giftLoverNoteLinkText: '{{ settings.gift_lover_note_link_text }}',
    giftLoverNoteTextLink: '{{ settings.gift_lover_note_text_link | url_decode}}',
    giftLoverButtonText: `{{ settings.gift_lover_button_text }}`,
    giftLoverImage: `{{ settings.gift_lover_image | img_url | url_decode }}`,
    giftLoverImageAlt: `{{ settings.gift_lover_image_alt }}`,
    giftLoverImageLink: `{{ settings.gift_lover_image_link }}`,
    giftLoverProductSelect: `{{ settings.gift_product_select }}`,
    giftLoverProductVariant: `{{ all_products[settings.gift_product_select].variants | json }}`,
    giftLoverProductVariantPriceSize: '{{ all_products[settings.gift_product_select].variants[0].price | money }}',
    giftLoverProductVariantPriceSizeTwo: '{{ all_products[settings.gift_product_select].variants[1].price | money }}',
  }
  
  window.variantStrings = {
    addToCart: `{{ 'products.product.add_to_cart' | t }}`,
    soldOut: `{{ 'products.product.sold_out' | t }}`,
    unavailable: `{{ 'products.product.unavailable' | t }}`,
    unavailable_with_option: `{{ 'products.product.value_unavailable' | t: option_value: '[value]' }}`,
  }

  window.quickOrderListStrings = {
    itemsAdded: `{{ 'sections.quick_order_list.items_added.other' | t: quantity: '[quantity]' }}`,
    itemAdded: `{{ 'sections.quick_order_list.items_added.one' | t: quantity: '[quantity]' }}`,
    itemsRemoved: `{{ 'sections.quick_order_list.items_removed.other' | t: quantity: '[quantity]' }}`,
    itemRemoved: `{{ 'sections.quick_order_list.items_removed.one' | t: quantity: '[quantity]' }}`,
    viewCart: `{{- 'sections.quick_order_list.view_cart' | t -}}`,
    each: `{{- 'sections.quick_order_list.each' | t: money: '[money]' }}`,
  }

  window.accessibilityStrings = {
    imageAvailable: `{{ 'products.product.media.image_available' | t: index: '[index]' }}`,
    shareSuccess: `{{ 'general.share.success_message' | t }}`,
    pauseSlideshow: `{{ 'sections.slideshow.pause_slideshow' | t }}`,
    playSlideshow: `{{ 'sections.slideshow.play_slideshow' | t }}`,
    recipientFormExpanded: `{{ 'recipient.form.expanded' | t }}`,
    recipientFormCollapsed: `{{ 'recipient.form.collapsed' | t }}`
  }

  window.currencyCode = "{{ shop.currency }}";

  window.freeShipping = {
    showShippingProgressBar: {{ settings.show_shipping_progress_bar | default: false }},
    shippingThreshold: {{ settings.shipping_threshold | times: 100 | default: 0 }},
    shippingProgressText: "{{ settings.shipping_progress_text }}",
    shippingCompleteText: "{{ settings.shipping_complete_text }}"
  }

  window.storeData = {
    domain: "{{ shop.permanent_domain }}",
    shopHandle: "{{ shop.permanent_domain | replace: '.myshopify.com', '' }}",
    storefrontToken: "{{ settings.storefront_token }}"
  }
</script>